<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="63dp"
            android:src="@drawable/logo"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtname"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:textSize="12sp"
                android:paddingLeft="20sp"
                android:textColor="@color/colorPrimary"
                android:gravity="left|center_horizontal|center_vertical"
                android:text="Cook Door"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timingLabel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:paddingLeft="20sp"
            android:textColor="@android:color/black"
            android:gravity="left|center_horizontal|center_vertical"
            android:text="Opening Time (Mon-Fri)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOpeningTime"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:text="9Am-10Pm"/>

            <TextView
                android:id="@+id/txtClosingTime"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:text="9Am-10Pm"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/clinicType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Open Menu"/>
</LinearLayout>